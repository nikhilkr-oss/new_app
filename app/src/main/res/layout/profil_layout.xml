<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/imgrl"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_camera">

        </ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        android:text="Set Profile"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/txt_black"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:gravity="start"
        android:textSize="14sp"
        android:textColor="@color/txt_black"
        android:layout_marginTop="34dp"/>
    <EditText
        android:id="@+id/edt_first_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingStart="12dp"

        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edt_bg"
        android:textColor="@color/txt_black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:gravity="start"
        android:textSize="14sp"
        android:textColor="@color/txt_black"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edt_last_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingStart="12dp"

        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edt_bg"
        android:textColor="@color/txt_black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:gravity="start"
        android:textSize="14sp"
        android:textColor="@color/txt_black"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/phno_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:maxLength="10"
        android:text="6546544"
        android:textAlignment="textStart"
        android:paddingStart="12dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/phone_edt_bg"
        android:textColor="@color/txt_black"
        android:textSize="15dp"/>

    <RelativeLayout
        android:id="@+id/gps_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/rectangle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:text="pick your current location"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gps"
            android:layout_marginHorizontal="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="16dp"
    android:layout_gravity="center_horizontal"
    android:textColor="#020202"
    android:textSize="16sp"
    android:text="Or"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content"
        android:text="Post Code"
        android:gravity="start"
        android:textSize="14sp"
        android:textColor="@color/txt_black"
        android:layout_marginTop="16dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@null"
        android:hint="Select post code or address"
        android:textColor="#020202"
        android:textSize="14dp"/>
</LinearLayout>