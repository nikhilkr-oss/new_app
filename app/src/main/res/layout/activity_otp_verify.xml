<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".OtpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:src="@drawable/back_icon" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="70dp"
            android:gravity="start"
            android:lines="2"
            android:textAlignment="textStart"
            android:text="@string/enter_verification"
            android:textColor="@color/txt_black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:textAlignment="textStart"
            android:text="@string/verify_txt"
            android:textColor="@color/txt_black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/edt_txtphno"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="66dp"
            android:layout_width="wrap_content"
            android:drawablePadding="14dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_edit"
            android:maxLines="1"
            android:text="212346456"
            android:layout_marginBottom="42dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/txt_black"
            android:textColorHint="@color/txt_black"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/otp_phno"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:maxLength="4"
            android:letterSpacing="4"
            android:text="2123"
            android:layout_marginBottom="42dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/txt_black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_req_otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/btn_bg"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />



        <ImageView
            android:layout_marginBottom="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_don_t_receive_otp__resend"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="24dp"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>